// Azure Resource Graph Query
// Find all VMs using Availability Sets with uniform orchestration mode
resources
| where type =~ "microsoft.compute/virtualmachinescalesets"
| where properties.orchestrationMode =~ "Uniform"
| project recommendationId="a8d25876-7951-b646-b4e8-880c9031596b", name, id, tags, param1="orchestrationMode:Uniform"