
// Azure Resource Graph Query
// Provides a list of App services that do not have minimum instance count of 2

resources
| where type == "microsoft.web/serverfarms"
| where sku.capacity < 2
| project recommendationId = "9e6682ac-31bc-4635-9959-ab74b52454e6", name, id, tags, param1 = "Instance count is less than 2"

